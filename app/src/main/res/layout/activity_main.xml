<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".MainActivity">
    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/linearL1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="10dp"
                    android:id="@+id/zoomImageId"
                    android:src="@drawable/zoom_icon"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>
                <TextView
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="@string/please_share_this_code_with_your_friends_to_start_video_call" />
                <EditText
                    android:importantForAutofill="no"
                    android:id="@+id/codeBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/text_box"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Secrete code"
                    android:inputType="textPersonName"
                    android:padding="10dp" />
                <Button
                    android:textAllCaps="false"
                    android:layout_gravity="center"
                    android:id="@+id/joinBtn"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/join_button_rounded"
                    android:drawableStart="@drawable/ic_join"
                    android:textSize="18sp"
                    android:paddingEnd="40dp"
                    android:paddingStart="40dp"
                    android:text="Join to Meeting"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>